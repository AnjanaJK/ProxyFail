<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMA alpha (rise):" />
        <SeekBar
            android:id="@+id/sbEmaRise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />
        <TextView
            android:id="@+id/tvEmaRiseVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.60" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMA alpha (fall):" />
        <SeekBar
            android:id="@+id/sbEmaFall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />
        <TextView
            android:id="@+id/tvEmaFallVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.25" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close threshold (dBm):" />
        <SeekBar
            android:id="@+id/sbCloseThresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60" />
        <TextView
            android:id="@+id/tvCloseThreshVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-65" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Far threshold (dBm):" />
        <SeekBar
            android:id="@+id/sbFarThresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60" />
        <TextView
            android:id="@+id/tvFarThreshVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-80" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consecutive required:" />
        <SeekBar
            android:id="@+id/sbConsec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4" />
        <TextView
            android:id="@+id/tvConsecVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Path-loss exponent n (x10):" />
        <SeekBar
            android:id="@+id/sbPathN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="30" />
        <TextView
            android:id="@+id/tvPathNVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 (2.0)" />

        <Button
            android:id="@+id/btnSaveTune"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and Apply" />

    </LinearLayout>

</ScrollView>
