<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FD">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher Dashboard"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:letterSpacing="0.01" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:background="#5C6BC0"
                    android:alpha="0.8" />

                <!-- Session Status -->
                <TextView
                    android:id="@+id/tvSessionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@android:drawable/presence_invisible"
                    android:drawablePadding="12dp"
                    android:drawableTint="#90A4AE"
                    android:text="    No session running"
                    android:textColor="#546E7A"
                    android:textSize="15sp"
                    android:gravity="center_vertical" />

                <!-- Device Name -->
                <TextView
                    android:id="@+id/tvBeaconDevice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@android:drawable/ic_menu_myplaces"
                    android:drawablePadding="12dp"
                    android:drawableTint="#90A4AE"
                    android:text="Device: —"
                    android:textColor="#546E7A"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <!-- Beacon UUID -->
                <TextView
                    android:id="@+id/tvBeaconUuid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@android:drawable/ic_menu_compass"
                    android:drawablePadding="12dp"
                    android:drawableTint="#90A4AE"
                    android:text="Beacon UUID: 12345678-..."
                    android:textColor="#546E7A"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

                <!-- Service Data (hex) required by nRF Connect -->
                <TextView
                    android:id="@+id/tvServiceDataHex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="12dp"
                    android:drawableTint="#90A4AE"
                    android:text="ServiceData (hex): -"
                    android:textColor="#546E7A"
                    android:textSize="13sp"
                    android:gravity="center_vertical" />

                <!-- TX Power -->
                <TextView
                    android:id="@+id/tvTxPower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@android:drawable/ic_menu_manage"
                    android:drawablePadding="12dp"
                    android:drawableTint="#90A4AE"
                    android:text="TX Power: -"
                    android:textColor="#546E7A"
                    android:textSize="13sp"
                    android:gravity="center_vertical" />

                <!-- Advertise Mode -->
                <TextView
                    android:id="@+id/tvAdvertiseMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                    android:drawablePadding="12dp"
                    android:drawableTint="#90A4AE"
                    android:text="Advertise Mode: -"
                    android:textColor="#546E7A"
                    android:textSize="13sp"
                    android:gravity="center_vertical" />

                <!-- Connectable flag -->
                <TextView
                    android:id="@+id/tvConnectable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@android:drawable/ic_menu_send"
                    android:drawablePadding="12dp"
                    android:drawableTint="#90A4AE"
                    android:text="Connectable: -"
                    android:textColor="#546E7A"
                    android:textSize="13sp"
                    android:gravity="center_vertical" />

                <!-- ✅ ADDED: Beacon Status -->
                <TextView
                    android:id="@+id/tvBeaconStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@android:drawable/stat_sys_data_bluetooth"
                    android:drawablePadding="12dp"
                    android:drawableTint="#90A4AE"
                    android:text="  Beacon: Not Ready ❌"
                    android:textColor="#546E7A"
                    android:textSize="14sp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- QR Code Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/qrCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session QR Code"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#37474F"
                    android:layout_marginBottom="16dp" />

                <ImageView
                    android:id="@+id/qrImage"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:scaleType="fitCenter"
                    android:padding="12dp"
                    android:background="#FAFAFA"
                    android:contentDescription="Session QR Code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Students scan to join"
                    android:textSize="13sp"
                    android:textColor="#78909C"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/qrCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartSession"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Start New Session"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:backgroundTint="#5C6BC0"
                app:cornerRadius="12dp"
                app:elevation="4dp"
                android:letterSpacing="0.02"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="textStart"
                app:iconPadding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEndSession"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="End Session"
                android:textAllCaps="false"
                app:backgroundTint="#EF5350"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                app:cornerRadius="12dp"
                app:elevation="4dp"
                android:letterSpacing="0.02"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="textStart"
                app:iconPadding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignOut"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Sign Out"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:cornerRadius="12dp"
                app:strokeColor="#5C6BC0"
                app:strokeWidth="2dp"
                app:backgroundTint="@android:color/transparent"
                android:textColor="#5C6BC0"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconGravity="textStart"
                app:iconTint="#5C6BC0"
                app:iconPadding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewAttendance"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="View Attendance"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:cornerRadius="12dp"
                app:backgroundTint="#FFB300"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                app:iconPadding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScheduleNotifications"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Schedule Notifications"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:cornerRadius="12dp"
                app:backgroundTint="#4CAF50"
                app:icon="@android:drawable/ic_menu_my_calendar"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                app:iconPadding="12dp" />

        </LinearLayout>

        <!-- Progress Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateTint="#5C6BC0"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>