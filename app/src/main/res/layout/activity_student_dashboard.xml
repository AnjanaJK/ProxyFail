<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".StudentDashboardActivity">

    <!-- Top Bar with User Info and Actions -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Student Dashboard"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/btnAttendance"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Take Attendance"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Sign Out"
            android:textSize="12sp"
            android:backgroundTint="#f44336" />
    </LinearLayout>

    <!-- Status Section -->
    <LinearLayout
        android:id="@+id/statusSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Permission Status Indicators -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Camera Permission:"
                android:textSize="14sp"
                android:textColor="#666666" />

            <Button
                android:id="@+id/btnCameraStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/status_indicator"
                android:backgroundTint="#cccccc"
                android:layout_marginEnd="8dp"
                android:enabled="false" />

            <TextView
                android:id="@+id/tvCameraStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking..."
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location Permission:"
                android:textSize="14sp"
                android:textColor="#666666" />

            <Button
                android:id="@+id/btnLocationStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/status_indicator"
                android:backgroundTint="#cccccc"
                android:layout_marginEnd="8dp"
                android:enabled="false" />

            <TextView
                android:id="@+id/tvLocationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking..."
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Loading Status -->
        <LinearLayout
            android:id="@+id/loadingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvLoadingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading dashboard..."
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content Area -->
    <WebView
        android:id="@+id/webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/statusSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Error Message (Initially Hidden) -->
    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Unable to load content. Please check your internet connection and permissions."
        android:textSize="14sp"
        android:textColor="#f44336"
        android:background="#ffebee"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/statusSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>