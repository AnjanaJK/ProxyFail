<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Control Panel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/teacherStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Initializing..."
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Session Control Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Management"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/startStopButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="START SESSION"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start/Stop attendance session for CS401-FALL25"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Beacon Control Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth Beacon"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnStartBeacon"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="START BEACON"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#2196F3"
                    app:cornerRadius="8dp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnStopBeacon"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="STOP BEACON"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#F44336"
                    app:cornerRadius="8dp"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Control BLE beacon broadcasting for proximity verification"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Instructions Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Instructions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Start the beacon first\n2. Start the session when ready\n3. Students can now mark attendance\n4. Stop session when class ends\n5. Stop beacon to save battery"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Course Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course: CS401-FALL25"
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>