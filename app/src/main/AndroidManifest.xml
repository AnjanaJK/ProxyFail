<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proxyfail.app">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Required when using foregroundServiceType="connectedDevice" on newer Android versions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <!-- Android 12+ runtime permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <!-- Optional for older devices scanning -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Camera used for QR scanning -->
    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:allowBackup="true"
        android:label="BeaconOnly"
        android:supportsRtl="true">

        <activity android:name="com.proxyfail.app.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.proxyfail.app.BeaconAdvertiserService"
            android:exported="false"
            android:foregroundServiceType="connectedDevice" />

        <activity android:name="com.proxyfail.app.QrDisplayActivity" android:exported="false" />
        <activity android:name="com.proxyfail.app.QrScanActivity" android:exported="false" />

        <!-- Calibration helper activity -->
        <activity android:name="com.proxyfail.app.CalibrationActivity" android:exported="false" />

    </application>
</manifest>
